<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% for a_page in site.pages %}
  {% if a_page.layout == "page" %}
  <url>
    <loc>{{ a_page.url | absolute_url }}</loc>
  </url>
  {% endif %}
  {% endfor %}

  {% for a_page in site.posts %}
  <url>
    <loc>{{ a_page.url | absolute_url }}</loc>
  </url>
  {% endfor %}
</urlset>